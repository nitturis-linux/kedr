#!/bin/sh

@multi_kernel_KERNEL_VAR_SHELL_DEFINITION@

indicator_module="${KERNEL}/@kmodule_name@.ko"
indicator_name="always"

. ../test_common.sh

init_test

echo "$indicator_name" > "${point_dir}/current_indicator"

if test $? -ne 0; then
	printf "Cannot set indicator for the point.\n"
	finalize_test
	exit 1
fi

if  simulate; then
	printf "Simulate should fail with \"always\" scenario.\n"
	finalize_test
	exit 1
fi

finalize_test
